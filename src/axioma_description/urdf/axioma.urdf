<?xml version="1.0"?>
<robot name="axioma_v2">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/visual/chasis.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/collision/chasis.dae" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0227" ixy="0" ixz="0" iyy="0.0852" iyz="0" izz="0.1041"/>
    </inertial>
  </link>

  <!-- Wheel 1 (Front Left) -->
  <link name="wheel_1">
    <visual>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/visual/llanta.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0381" length="0.03"/>
      </geometry>
      <origin xyz="0 0.02 0" rpy="-1.5707 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0029" iyz="0" izz="0.0056"/>
    </inertial>
  </link>

  <joint name="base_to_wheel1" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_1"/>
    <origin xyz="0.06442 0.07385 0.04068" rpy="3.141516 0 3.141516"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Wheel 2 (Rear Left) -->
  <link name="wheel_2">
    <visual>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/visual/llanta.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0381" length="0.03"/>
      </geometry>
      <origin xyz="0 0.02 0" rpy="-1.5707 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0029" iyz="0" izz="0.0056"/>
    </inertial>
  </link>

  <joint name="base_to_wheel2" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_2"/>
    <origin xyz="-0.071224 0.07385 0.04068" rpy="3.141516 0 3.141516"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Wheel 3 (Rear Right) -->
  <link name="wheel_3">
    <visual>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/visual/llanta.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0381" length="0.03"/>
      </geometry>
      <origin xyz="0 0.02 0" rpy="-1.5707 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0029" iyz="0" izz="0.0056"/>
    </inertial>
  </link>

  <joint name="base_to_wheel3" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_3"/>
    <origin xyz="-0.071224 -0.0625 0.04068" rpy="0 0 3.141592"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <!-- Wheel 4 (Front Right) -->
  <link name="wheel_4">
    <visual>
      <geometry>
        <mesh filename="package://axioma_description/models/axioma_v2/meshes/visual/llanta.stl" scale="1 1 1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0381" length="0.03"/>
      </geometry>
      <origin xyz="0 0.02 0" rpy="-1.5707 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0029" iyz="0" izz="0.0056"/>
    </inertial>
  </link>

  <joint name="base_to_wheel4" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_4"/>
    <origin xyz="0.064423 -0.0625 0.04068" rpy="0 0 3.141592"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <!-- LIDAR Link -->
  <link name="base_scan">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.030"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.030"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.125"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- IMU Link -->
  <link name="imu_link">
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.1 0.1 0.12" rpy="0 0 0"/>
  </joint>

</robot>
